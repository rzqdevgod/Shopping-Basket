{
  "name": "acme/widget-basket",
  "description": "Shopping basket implementation for Acme Widget Co",
  "type": "project",
  "require": {
    "php": "^8.1",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-strict-rules": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Acme\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Acme\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyse": "phpstan analyse -c phpstan.neon",
    "test": "phpunit"
  }
}
